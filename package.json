{
  "name": "drink-bar-management-system",
  "version": "1.0.0",
  "description": "调酒师酒吧管理系统 - 一键启动解决方案",
  "main": "start.js",
  "scripts": {
    "start": "node start.js",
    "dev": "node start.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "check-env": "node scripts/check-env.js",
    "services": "node scripts/service-manager.js",
    "services:start": "node scripts/service-manager.js start",
    "services:stop": "node scripts/service-manager.js stop",
    "services:restart": "node scripts/service-manager.js restart",
    "services:status": "node scripts/service-manager.js status",
    "services:health": "node scripts/service-manager.js health",
    "frontend:dev": "cd frontend && npm run dev",
    "frontend:build": "cd frontend && npm run build",
    "backend:dev": "cd backend && npm run dev",
    "backend:build": "cd backend && npm run build",
    "install:all": "npm install && cd frontend && npm install && cd ../backend && npm install",
    "clean": "rm -rf node_modules frontend/node_modules backend/node_modules",
    "clean:install": "npm run clean && npm run install:all"
  },
  "keywords": [
    "bar-management",
    "drink",
    "cocktail",
    "inventory",
    "order-management"
  ],
  "author": "Drink Bar Management Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "@tailwindcss/postcss": "^4.1.12",
    "react-hot-toast": "^2.6.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "concurrently": "^9.2.1",
    "jest": "^29.7.0",
    "whatwg-fetch": "^3.6.20"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/**/*.test.js",
      "**/tests/**/*.spec.js"
    ],
    "collectCoverageFrom": [
      "backend/src/**/*.js",
      "!backend/src/**/*.test.js"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ]
  }
}
